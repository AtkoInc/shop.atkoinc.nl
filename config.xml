<?xml version='1.0' encoding='utf-8'?>
<widget id="com.okta.atkoshop" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Atko shop</name>
    <description>
        This is demo application for Shopping Tomorrow on behalf of Okta inc.
    </description>
    <author email="frank.benus@okta.com" href="http://www.okta.com">
        Frank Benus - Okta inc.
    </author>
    <content src="index.html" />
    <plugin name="phonegap-plugin-barcodescanner" source="npm" />
    <plugin name="cordova-plugin-dialogs" source="npm" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" />
    <plugin name="cordova-plugin-camera" source="npm" />
    <feature name="Camera">
        <param name="ios-package" value="CDVCamera" />
    </feature>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-universal-links-plugin" source="npm" />
<platform name="ios">
	<icon src="assets/res/icon/ios/icon-1024.png" width="1024" height="1024"/>
	<icon src="assets/res/icon/ios/icon-small.png" width="29" height="29"/>
	<icon src="assets/res/icon/ios/icon-small@2x.png" width="58" height="58"/>
	<icon src="assets/res/icon/ios/icon-small@3x.png" width="87" height="87"/>
	<icon src="assets/res/icon/ios/icon-small-40.png" width="40" height="40"/>
	<icon src="assets/res/icon/ios/icon-small-40@2x.png" width="80" height="80"/>
	<icon src="assets/res/icon/ios/icon-small-40@3x.png" width="120" height="120"/>
	<icon src="assets/res/icon/ios/icon-small-50.png" width="50" height="50"/>
	<icon src="assets/res/icon/ios/icon-small-50@2x.png" width="100" height="100"/>
	<icon src="assets/res/icon/ios/icon.png" width="57" height="57"/>
	<icon src="assets/res/icon/ios/icon@2x.png" width="114" height="114"/>
	<icon src="assets/res/icon/ios/icon-60.png" width="60" height="60"/>
	<icon src="assets/res/icon/ios/icon-60@2x.png" width="120" height="120"/>
	<icon src="assets/res/icon/ios/icon-60@3x.png" width="180" height="180"/>
	<icon src="assets/res/icon/ios/icon-72.png" width="72" height="72"/>
	<icon src="assets/res/icon/ios/icon-72@2x.png" width="144" height="144"/>
	<icon src="assets/res/icon/ios/icon-76.png" width="76" height="76"/>
	<icon src="assets/res/icon/ios/icon-76@2x.png" width="152" height="152"/>
	<icon src="assets/res/icon/ios/icon-167.png" width="167" height="167"/>
	<icon src="assets/res/icon/ios/icon-83.5@2x.png" width="167" height="167"/>
</platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
